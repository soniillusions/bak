<%= @post.content %>


<% if current_user && @post.user_id == current_user.id %>
  <p>
    <%= link_to 'Edit', edit_post_path, class: 'custom-link' %>
    <%= link_to "Destroy", post_path(@post), class: 'custom-link', data: {
      turbo_method: :delete,
      turbo_confirm: "Are you sure?"
    } %>
  </p>
<% end %>

<%= form_with(model: [@post, @post.comments.build], url: user_post_comments_path(@post)) do |form| %>
  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>
  <div class="actions">
    <%= form.submit 'Create Comment' %>
  </div>
<% end %>